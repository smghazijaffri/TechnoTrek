    private void ToggleDropdown(int rowIndex)
    {
        if (IsApproved)
        {
            Items[rowIndex].IsDropdownOpen = false;
            return;
        }

        if (openDropdownIndex.HasValue && openDropdownIndex != rowIndex)
        {
            Items[openDropdownIndex.Value].IsDropdownOpen = false;
        }

        Items[rowIndex].IsDropdownOpen = !Items[rowIndex].IsDropdownOpen;

        if (Items[rowIndex].IsDropdownOpen)
        {
            Items[rowIndex].FilteredOptions = Options;
            openDropdownIndex = rowIndex;
        }
        else
        {
            openDropdownIndex = null;
        }
    }

    private void CloseDropdown(KeyboardEventArgs e, int rowIndex)
    {
        if (e.Key == "Escape")
        {
            Items[rowIndex].IsDropdownOpen = false;
        }
    }

    private void SelectOption(string option, int rowIndex)
    {
        if (Items[rowIndex].FilteredOptions.Contains(option))
        {
            Items[rowIndex].Item = option;
            Items[rowIndex].IsDropdownOpen = false;
        }
    }

    private async Task FilterOptions(ChangeEventArgs e, int rowIndex)
    {
        var searchTerm = e.Value.ToString();

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            Items[rowIndex].FilteredOptions = FilterList(Options, searchTerm);

            // Clear the input field if the entered value is not in the dropdown options
            if (!Items[rowIndex].FilteredOptions.Contains(Items[rowIndex].Item))
            {
                Items[rowIndex].Item = "";
            }
        }
        else
        {
            Items[rowIndex].FilteredOptions = Options;
        }

        await InvokeAsync(StateHasChanged);
    }

    private List<string> FilterList(List<string> items, string searchTerm)
    {
        List<string> filteredItems = new List<string>();

        foreach (string item in items)
        {
            if (item.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
            {
                filteredItems.Add(item);
            }
        }

        return filteredItems;
    }
