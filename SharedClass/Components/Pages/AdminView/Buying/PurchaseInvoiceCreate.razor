    private void ToggleApproval()
    {
        if (IsDraft)
        {
            IsDraft = false;
            IsSaving = false;
            if (purchase.Status == PurchaseStatuses.Paid)
            {
                IsPaid = true;
            }
            else
            {
                if (purchase.DueDate < DateTime.Today)
                {
                    Overdue = true;
                }
                else
                {
                    Unpaid = true;
                }
            }
        }
        else if (IsSaving)
        {
            IsDraft = true;
            IsSaving = false;
        }
        else if (UnpaidtoPaid)
        {
            IsPaid = true;
            IsSaving = false;
            UnpaidtoPaid = false;
        }

        else if (Unpaid || IsPaid || Overdue)
        {
            IsCancelled = true;
            IsSaving = false;
            Unpaid = false;
            IsPaid = false;
            Overdue = false;
        }
    }

