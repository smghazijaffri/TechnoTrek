@code {
    private string Username = string.Empty;
    private string Password = string.Empty;
    private bool IsLoginSuccessful = false;

    private async void Pagelogin()
    {
        IsLoginSuccessful = await login.Access(Username, Password, JSRuntime, Snackbar);
        if (IsLoginSuccessful)
        {
            await _protectedLocalStore.SetLocalAsync("Authorized", true);
            await _protectedLocalStore.SetLocalAsync("Username", Username);

            NavigationManager.NavigateTo("/dashboard");
            Snackbar.Clear();
            Snackbar.Add("Welcome " + Username, Severity.Success);
        }
        else
        {
            Snackbar.Clear();
            Snackbar.Add("Invalid Credentials", Severity.Error);
        }
    }
