        <div class="content">

            <h2>Sign In</h2>

            <EditForm class="form" Model="@login">

                <div class="inputBox">
                    <InputText type="text" required @bind-Value="Username" /> <i>Username</i>
                </div>

                <div class="inputBox">
                    <InputText type="password" required @bind-Value="Password" /> <i>Password</i>
                </div>

                <div class="links">
                    <a href="#">Forgot Password?</a>
